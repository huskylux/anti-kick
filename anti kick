-- LocalScript trong StarterGui > ScreenGui
local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")

local LocalPlayer = Players.LocalPlayer
local PlaceId = game.PlaceId
local JobId = game.JobId

-- UI tham chi·∫øu
local screenGui = script.Parent
local loadingFrame = screenGui:WaitForChild("LoadingFrame")
local playerCountLabel = screenGui:WaitForChild("PlayerCountLabel")

-- C·∫•u h√¨nh giao di·ªán PlayerCountLabel
playerCountLabel.TextScaled = true
playerCountLabel.Size = UDim2.new(0, 300, 0, 50)
playerCountLabel.Position = UDim2.new(0, 20, 0, 20)
playerCountLabel.BackgroundTransparency = 0.3

-- 1. Loading Screen
if not game:IsLoaded() then
    loadingFrame.Visible = true
    game.Loaded:Wait()
end
loadingFrame.Visible = false

-- 2. H√†m c·∫≠p nh·∫≠t s·ªë ng∆∞·ªùi ch∆°i
local function updateCount()
    local count = #Players:GetPlayers()
    playerCountLabel.Text = "üë• Ng∆∞·ªùi ch∆°i trong server: " .. count
end

-- G·ªçi l·∫ßn ƒë·∫ßu
updateCount()

-- 3. C·∫≠p nh·∫≠t m·ªói 3 gi√¢y
task.spawn(function()
    while true do
        updateCount()
        task.wait(3) -- ch·ªù 3 gi√¢y
    end
end)

-- 4. (Tu·ª≥ ch·ªçn) In ra console th√¥ng tin server
print("LocalPlayer:", LocalPlayer.Name)
print("PlaceId:", PlaceId)
print("JobId:", JobId)
